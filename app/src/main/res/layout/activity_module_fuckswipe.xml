<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.module.FuckSwipeActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_marginStart="-2dp"
                android:textSize="15sp"
                android:text="防右滑设置" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/fuck_swipe_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/switch_thumb"
                    app:track="@drawable/switch_track"
                    android:padding="6dp"
                    android:text="功能总开关" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/fuck_swipe_global_switch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:thumb="@drawable/switch_thumb"
                        app:track="@drawable/switch_track"
                        android:padding="6dp"
                        android:text="全局防右滑" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="开启此开关后，将会在所有应用中屏蔽右滑退出，不影响返回键"
                        android:textSize="11sp"
                        android:alpha="0.8"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginTop="-4dp"
                        android:layout_marginBottom="6dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="选择屏蔽返回键的应用"
                android:alpha="0.84"
                android:textSize="13sp"
                android:layout_marginTop="6dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="屏蔽选中应用的返回键事件"
                android:alpha="0.68"
                android:textSize="11sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="方法不成熟，这只是一个临时的方法，会导致应用不能通过右滑和按下返回键（任何方式）来进行返回"
                android:alpha="0.68"
                android:textColor="@color/danger"
                android:textSize="11sp" />
            <LinearLayout
                android:id="@+id/application_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="11sp"
                android:text="退出页面时自动保存"
                android:gravity="center"
                android:alpha="0.55" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>